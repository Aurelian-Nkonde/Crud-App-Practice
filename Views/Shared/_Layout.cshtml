<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - three</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/tailwind.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header class="bg-black">
        <div class="container mx-auto flex justify-around py-5">
            <h1 class="font-sans text-4xl tracking-wider font-bold text-blue-300">Philo-App</h1>
            <ul class="flex items-center">
                <li class="font-sans text-lg text-white tracking-wider mr-4 md:mr-8 border-2 py-1 px-2 md:px-4 border-transparent transition ease-in-out duration-150 hover:border-white ">
                    <a asp-controller="Philosopher" class="text-white" asp-action="Index">Home</a>
                </li>
                <li class="font-sans text-lg text-white tracking-wider mr-4 md:mr-8 border-2 py-1 px-2 md:px-4 border-transparent transition ease-in-out duration-150 hover:border-white ">
                     <a asp-controller="Philosopher" class="text-white" asp-action="Create">Create</a>
                </li>
                <li class="font-sans text-lg text-white tracking-wider mr-4 md:mr-8 border-2 py-1 px-2 md:px-4 border-transparent transition ease-in-out duration-150 hover:border-white ">
                     <a asp-controller="Info" class="text-white" asp-action="Index">About</a>
                </li>
            </ul>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
