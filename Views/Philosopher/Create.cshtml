@model  MvcPhilosopher.Models.Philosopher;


@{

}


    <div class="container mx-auto pt-16 pb-10 max-w-lg px-6">
        <div class="pb-10">
            <h1 class="font-sans text-3xl tracking-wide pb-1 underline">Hope he/she is one of them</h1>
            <h1 class="font-sans text-3xl tracking-wide underline">Add a Philosopher blw.</h1>    
        </div>

        <div class="max-w-lg mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
                <div class="py-2 grid gap-3 grid-cols-2">
                    <div class="flex flex-col">
                        <label asp-for="First"></label>
                        <input asp-for="First" type="text" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                        <span asp-validation-for="First" class="text-red-600"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="Last"></label>
                        <input asp-for="Last" type="text" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                        <span asp-validation-for="Last" class="text-red-600"></span>
                    </div>
                </div>
                <div class="py-2 flex flex-col">
                    <label asp-for="Field"></label>
                    <input asp-for="Field" type="text" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                    <span asp-validation-for="Field" class="text-red-600"></span>
                </div>
                <div class="py-2 flex flex-col">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" type="text" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                    <span asp-validation-for="Country" class="text-red-600"></span>
                </div>
                <div class="py-2 flex flex-col">
                    <label asp-for="Invention"></label>
                    <input asp-for="Invention" type="text" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                    <span asp-validation-for="Invention" class="text-red-600"></span>
                </div>
                <div class="py-2 grid gap-3 grid-cols-2">
                    <div class="flex flex-col">
                        <label asp-for="Age"></label>
                        <input asp-for="Age" type="number" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                        <span asp-validation-for="Age" class="text-red-600"></span>
                    </div>
                    <div class="flex flex-col">
                        <label>Picture</label>
                        <input type="file" class="font-sans py-2 px-3 outline-none border-2 border-gray-400 w-full">
                    </div>
                </div>
                <button type="submit" class="font-sans text-lg bg-blue-600 py-3 px-7 w-full transition ease-in-out duration-150 hover:bg-blue-700 text-white">Add</button>
            </form>
        </div>
    </div>


    @section Scripts{
        @{ <partial name="_ValidationScriptsPartial" /> }
    }